<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="rjra-server-web" />
    <!-- 自动扫描 -->
    <dubbo:annotation package="com.hdg" />
    <!-- 使用multicast广播注册中心暴露服务地址 -->
    <dubbo:registry address="zookeeper://zoo1:2181?backup=zoo2:2181,zoo3:2181" />
    <!-- 用dubbo协议在30880端口暴露服务 -->
    <dubbo:protocol name="dubbo" port="40880"/>

    <dubbo:reference id="companyService" interface="com.hdg.rjra.server.service.CompanyService" timeout="1200000"/>
    <dubbo:reference id="fileService" interface="com.hdg.rjra.server.service.FileService"  timeout="1200000"/>
    <dubbo:reference id="geoService" interface="com.hdg.rjra.server.service.GeoService"  timeout="1200000"/>
    <dubbo:reference id="resumeService" interface="com.hdg.rjra.server.service.ResumeService" timeout="1200000" />
    <dubbo:reference id="userService" interface="com.hdg.rjra.server.service.UserService"  timeout="1200000"/>
    <dubbo:reference id="workService" interface="com.hdg.rjra.server.service.WorkService"  timeout="1200000"/>

    <bean id="propertyConfigurer" class="com.hdg.common.properties.CustomizedPropertyConfigurer">
        <property name="locations">
            <list>
                <value>classpath*:rjra-server-web.properties</value>
            </list>
        </property>
    </bean>

</beans>